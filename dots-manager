#!/bin/bash

dots_location="~/.dotfiles"

push_all() {
	echo "push_all function"
}

push_single() {
	package_name="$1"
	echo "push_single function"
	echo "Will push $package_name"
}

push_file() {
	file_name="$1"
	echo "push_file function"
	echo "Will push $file_name"
}

usage() {
	echo "usage function"
	echo "Outputs help for program"
}

version() {
	echo "version function"
	echo "Outputs version"
}

while [ "$1" != "" ]; do
	case $1 in
		--dots-location )
			shift
			dots_location="$1"
			;;
		-a | --all )
			push_all
			exit
			;;
		-s | --single )
			shift
			package_name="$1"
			push_single $package_name
			exit
			;;
		-f | --file )
			shift
			file_name="$1"
			push_file $file_name
			exit
			;;
		-h | --help )
			usage
			exit
			;;
		-v | --version )
			version
			exit
			;;
		* )
			usage
			exit 1
			;;
	esac
	shift
done
